<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dots.ViewTermsActivity"
    android:background="#f3987e">

    <ImageView
        android:id="@+id/graphic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/doticonlarge"
        android:adjustViewBounds="true"/>

    <Button
        android:id="@+id/graphButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Practice Graph"
        android:onClick = "onNormalGraph"
        android:background="#3dffffff"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/timeButton"
        android:height= "50dp"
        android:width="50dp"
        />

    <Button
        android:id="@+id/limitsGraphButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Limits Test Graph"
        android:onClick = "onLimitGraph"
        android:background="#3dffffff"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:layout_alignRight="@+id/timeButton"
        android:layout_below = "@+id/timeButton"
        android:height= "50dp"
        android:width="50dp"
        />


    <Button
        android:id="@+id/timeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graphButton"
        android:text="Speed Test Graph"
        android:onClick = "onTimedGraph"
        android:background="#3dffffff"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:height="50dp"
        android:width="50dp" />



</RelativeLayout>