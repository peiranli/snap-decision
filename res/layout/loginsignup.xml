<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dots.ViewTermsActivity"
    android:background="#f3987e">


    <TextView
        android:id="@+id/txtusername"
        android:text="@string/Username"
        android:textSize = "30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txtusername"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txtpassword"
        android:text="@string/Password"
        android:layout_marginTop="22dp"
        android:textSize = "30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/txtpassword"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/login"
        android:text="@string/LoginBtn"
        android:layout_width="750dp"
        android:layout_height="50dp"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:background="#3dffffff"
        android:textColor="#000000"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/signup"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/signup"
        android:text="@string/SignupBtn"
        android:layout_width="750dp"
        android:layout_height="50dp"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:background="#3dffffff"
        android:textColor="#000000"
        android:layout_below="@+id/login"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:textSize="20dp"/>

    <!--<Button
        android:id="@+id/runOffline"
        android:text="Run Offline"
        android:onClick = "onRunOffline"
